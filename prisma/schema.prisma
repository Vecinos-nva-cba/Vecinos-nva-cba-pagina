generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Redes {
  Instagram
  Facebook
  Twitter
  Linkedin
  Web
}

model Grupo {
  id          String  @id @default(uuid())
  nombre      String
  descripcion String
  imagen      String?
  tipo        String
  url         String
}

model Profesional {
  id            String      @id @default(uuid())
  nombre        String
  apellido      String
  numero        String
  trabajo       String[]    @default([])
  redesSociales RedSocial[]
  imagen        Imagen[]
}

model Lugar {
  id           String      @id @default(uuid())
  nombre       String
  barrio       String
  tipo         String[]
  imagenes     Imagen[]
  redes        RedSocial[]
  localizacion String? 

  direccion Direccion[]
}

model Direccion {
  id     String @id @default(uuid())
  calle  String
  altura Int?

  lugar   Lugar  @relation(fields: [lugarId], references: [id])
  lugarId String
}

model RedSocial {
  url  String @id
  tipo Redes

  profesionalId String?
  Profesional   Profesional? @relation(fields: [profesionalId], references: [id])

  Lugar   Lugar?  @relation(fields: [lugarId], references: [id])
  lugarId String?
}

model Imagen {
  id  String @id @default(uuid())
  url String

  profesionalId String?
  Profesional   Profesional? @relation(fields: [profesionalId], references: [id])

  lugarId String?
  Lugar   Lugar?  @relation(fields: [lugarId], references: [id])
}
